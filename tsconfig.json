{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noImplicitAny": true, // نوع مفدار ورودی رو غیر فعال میکنه`
    "strictNullChecks": false, // میزاره نوع هل بربر با null and undefind بشن
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
